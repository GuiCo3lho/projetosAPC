                printf("ERRO: Opcao invalida!\nDeseja fazer outra consulta?\nS ou s - SIM\nN ou n- NAO\n");
                scanf("%c",&op);
            }while(op!='N' && op!='S' && op!='n' && op!='s');
        }
    }while(op=='S' || op=='s');
